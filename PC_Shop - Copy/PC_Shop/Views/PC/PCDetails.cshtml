@using PC_Shop.Models
@model PC
@{
	ViewBag.Title = "PCDetails";
	Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>PC Details</h2>
<div>
	<div class="container">
		<div class=" row">
			<h3>PC Name</h3>
			<div class=" col-lg-6">
				@Model.PcName
			</div>
		</div>

		<div class=" row">
			<h3>User Name</h3>
			<div class=" col-lg-6">
				@Model.UserName
			</div>
		</div>

		<div class=" row">
			<h3>Cpu</h3>
			<div class=" col-lg-6">
				@Model.Cpu
			</div>
		</div>
		<div class=" row">
			<h3>Gpu</h3>
			<div class=" col-lg-6">
				@Model.Gpu
			</div>
		</div>

		<div class=" row">
			<h3>Ram</h3>
			<div class=" col-lg-6">
				@Model.Ram
			</div>
		</div>

		<div class=" row">
			<h3>Motherboard</h3>
			<div class=" col-lg-6">
				@Model.Motherboard
			</div>
		</div>

		<div class=" row">
			<h3>Powersupply</h3>
			<div class=" col-lg-6">
				@Model.Powersupply
			</div>
		</div>


		@if (!(Session["RoleName"] == null))
		{
			if ((string)Session["RoleName"] == "Admin")
			{
				<div class=" row">
					<h3>Update</h3>
					<div class=" col-lg-6">
						@Html.ActionLink("Update", "Update", "PC", new { pcID = (int)Session["PcID"] }, new { @class = " btn btn-warning" })
					</div>
				</div>




				<div class=" row">
					<h3>Delete</h3>
					<div class=" col-lg-6">
						@Html.ActionLink("Delete", "Delete", "PC", new { pcID = (int)Session["PcID"] }, new { @onclick = "return confirm('Are you sure')", @class = " btn btn-danger" })
					</div>
				</div>
			}
		}
		<div class=" row">
			<h3>Buy</h3>
			<div class=" col-lg-6">
				@Html.ActionLink("Buy", "ConfirmOrder", "Order", new { pcID = (int)Session["PcID"] }, new {  @class = "btn btn-success" })
			</div>
		</div>
		<div class=" row">
			<h3>Return to store </h3>
			<div class=" col-lg-6 ", id="demo" c>
				@Html.ActionLink("Return", "Store", "Pc", new { @class = " btn btn-default" } )
			</div>
		</div>

	</div>
</div>
